{% extends 'base.html.twig' %}

{% block title %}{{livre.titre}}{% endblock %}
{% set headerh1 = livre.titre %}
{% set layoutHeader2 = true %}
{% set pageType = 'Livre' %}

{% block body %}

{% include './layout/header.html.twig' %}
    <main>
        <section id="detailsLivre" class="container">
            <div class="row">
                <div class="col col-12 col-sm-4">
                    <img src="/images/{{livre.urlCouverture}}"  id="imageUne" alt="Couverture {{livre.titre}}">
                </div>
                <div class="col col-12 col-sm-8">
                    <h4>Par : 
                        {# affichage du nom et prenom des l'auteurs si le prenom est défini #}
                        {% for auteur in livre.auteurs %}
                            {% if auteur.prenom is defined %}{{auteur.prenom}} {% endif %}{{auteur.nom}}{% if livre.auteurs|length > 1 %},{% endif %}
                        {% endfor %}
                    </h4>
                    <p>{{livre.description}}</p>
                    <small class="form-text text-muted">Ajouté à Bouquins le {{ livre.dateAjout|date("d/m/Y") }}</small>
                    <a href="#" class="btn btn-primary">Emprunter</a>

                    {# affichage des liens vers les fiches des auteurs, avec les noms complets des auteurs si il y en a plus d'un #}
                    {% if livre.auteurs|length == 1 %}
                        {% for auteur in livre.auteurs %}
                            <a href="/auteur/{{auteur.id}}" class="btn btn-primary">Fiche de l'auteur</a>
                        {% endfor %}
                    {% else %}
                        {% for auteur in livre.auteurs %}
                            <a href="/auteur/{{auteur.id}}" class="btn btn-primary">Fiche de l'auteur 
                            {% if auteur.prenom is defined %}{{auteur.prenom}} {% endif %}{{auteur.nom}}</a>
                        {% endfor %}
                    {% endif %}

                </div>
            </div>
        </section>
        
        <section class="container">
            <h2>Du même auteur</h2>
        </section>
        <section>
            <div class="containerParallax">
                <div id="duMemeAuteurBg" class="parallaxElement parallaxBack">
                </div>
                <div class="parallaxElement parallaxBase">
                    <div class="container">
                        <div class="card-columns">

                            <div class="card mb-4">
                                <div class="card-img-container">
                                    <img class="card-img-top"src="/images/januavera.jpg" alt="Card image cap">
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">Janua Vera</h5>
                                    <p class="card-text">Auteur : Jean-Philippe Jaworski</p>
                                    <a href="livre.html" class="btn btn-primary">Détails</a>
                                    <a href="#" class="btn btn-primary">Emprunter</a>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">Ajouté à Bouquins il y a 2 ans</small>
                                </div>
                            </div>
                            <div class="card mb-4">
                                <div class="card-img-container">
                                    <img class="card-img-top"src="/images/gagnerlaguerre.jpg" alt="Card image cap">
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">Gagner la guerre</h5>
                                    <p class="card-text">Auteur : Jean-Philippe Jaworski</p>
                                    <a href="livre.html" class="btn btn-primary">Détails</a>
                                    <a href="#" class="btn btn-primary">Emprunter</a>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">Ajouté à Bouquins il y a 2 ans</small>
                                </div>
                            </div>
                            <div class="card mb-4">
                                <div class="card-img-container">
                                    <img class="card-img-top"src="/images/memepasmort.jpg" alt="Card image cap">
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">Même pas mort</h5>
                                    <p class="card-text">Auteur : Jean-Philippe Jaworski</p>
                                    <a href="livre.html" class="btn btn-primary">Détails</a>
                                    <a href="#" class="btn btn-primary">Emprunter</a>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">Ajouté à Bouquins il y a 2 ans</small>
                                </div>
                            </div>
                            <div class="card mb-4">
                                <div class="card-img-container">
                                    <img class="card-img-top"src="/images/chasseroyale.jpg" alt="Card image cap">
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">Chasse royale</h5>
                                    <p class="card-text">Auteur : Jean-Philippe Jaworski</p>
                                    <a href="livre.html" class="btn btn-primary">Détails</a>
                                    <a href="#" class="btn btn-primary">Emprunter</a>
