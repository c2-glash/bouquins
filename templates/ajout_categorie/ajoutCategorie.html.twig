{% extends 'base.html.twig' %}

{% block title %}Ajouter une Catégorie{% endblock %}
{% set headerh1 = 'Ajouter une catégorie' %}
{% set pageType = 'GestionCompte' %}

{% block body %}

{% include './layout/header.html.twig' %}
    <main>
        <section class="container">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}

                {{ form_start(categorie_form) }}
                    {{ form_widget(categorie_form) }}
                    <input type="submit" class="btn btn-primary" value="Ajouter une catégorie">
                {{ form_end(categorie_form) }}
        </section>

        <section class="container">
            <a href="/ajout/livre" class="btn btn-primary">Ajouter un livre</a>
            <a href="/ajout/auteur" class="btn btn-primary">Ajouter un auteur</a>
        </section>
    </main>
{% include './layout/footer.html.twig' %}
{% endblock %}
