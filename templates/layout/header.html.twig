{% block  header %}
    <header>
        <section class="container">
            <nav class="navbar navbar-expand-lg navbar-dark">
                <a class="navbar-brand" href="/">
                    Bouquins
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/livres/">Les livres</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/auteurs/">Les auteurs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/categories/">Les catÃ©gories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Emprunter un livre</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Ajouter un livre</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="row">
                {% if layoutHeader2 is defined %}
                    <div class="col col-12 col-md-4 layoutHeader2">
                    </div>
                    <div class="col col-12 col-md-8 layoutHeader2">
                        <h1>{{ headerh1 }}</h1>
                    </div>
                {% else %}
                    <div class="col col-12 {% if displayLoginForm is defined %}col-md-8{% else %}col-md-12{% endif %}">
                        {% if headerh1 is defined %}
                            <h1>{{ headerh1 }}</h1>
                        {% endif %}
                        {% if headerh5 is defined or headerp is defined %}
                            <article>
                                {% if headerh5 is defined %}
                                    <h5>{{headerh5}}</h5>
                                {% endif %}
                                {% if headerp is defined %}
                                    <p>{{headerp}}</p>
                                {% endif %}
                                {% if headerbtntext is defined %}
                                    <a class="btn btn-primary" href="{% if headerbtnlink is defined %}{{ headerbtnlink }}{% endif %}" role="button">{{ headerbtntext }}</a>
                                {% endif %}
                            </article>
                        {% endif %}
                    </div>
                    {% if displayLoginForm is defined %}
                        <div class="col col-12 col-md-4">
                            <form id="hpLogin">
                                <h5>Connexion</h5>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="login" placeholder="Identifiant">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" id="login" placeholder="Mot de passe">
                                </div>
                                <input type="submit" class="btn btn-primary" role="button" value="Connexion"/>
                            </form>
                        </div>
                    {% endif %}
                {% endif %}
            </div>
        </section>
    </header>
{% endblock %}