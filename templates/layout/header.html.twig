{% block  header %}
    <header>
        <section class="container">
            <nav class="navbar navbar-expand-lg navbar-dark">
                <a class="navbar-brand" href="/">
                    Bouquins
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="livres.html">Les livres</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="auteurs.html">Les auteurs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="categories.html">Les cat√©gories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Emprunter un livre</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Ajouter un livre</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="row">
                <div class="col col-12 {% if displayLoginForm %}col-md-8{% else %}col-md-12{% endif %}">
                    {% if headerh1 %}
                        <h1>{{ headerh1 }}</h1>
                    {% endif %}
                    <article>
                        <h5>{{headerh5}}</h5>
                        <p>{{headerp}}</p>
                        <a class="btn btn-primary" href="{{ headerbtnlink }}" role="button">{{ headerbtntext }}</a>
                    </article>
                </div>
                {% if displayLoginForm %}
                    <div class="col col-12 col-md-4">
                        <form id="hpLogin">
                            <h5>Connexion</h5>
                            <div class="form-group">
                                <input type="text" class="form-control" id="login" placeholder="Identifiant">
                            </div>
                            <div class="form-group">

                                <input type="password" class="form-control" id="login" placeholder="Mot de passe">
                            </div>
                            <input type="submit" class="btn btn-primary" role="button" value="Connexion"/>
                        </form>
                    </div>
                {% endif %}
            </div>
        </section>
    </header>
