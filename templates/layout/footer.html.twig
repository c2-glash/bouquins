{% block  footer %}
    <footer>
        <section class="container">
            <div class="row">
                <div class="col col-12 col-md-6">
                    <h5>Contactez-nous</h5>
                    <form>
                        <div class="form-group">
                            <label for="nom">Nom</label>
                            <input type="text" class="form-control" id="nom" placeholder="Nom">
                        </div>
                        <div class="form-group">
                            <label for="email">Adresse email</label>
                            <input type="email" class="form-control" id="email" aria-describedby="email" placeholder="Votre adresse email">
                            <small id="emaildetail" class="form-text text-muted">Nous ne partagons pas vos données personnelles.</small>
                        </div>
                        <div class="form-group">
                            <label for="message">Message</label>
                            <textarea class="form-control" id="message" rows="3" placeholder="Votre message"></textarea>
                        </div>
                        <input type="submit" class="btn btn-primary" value="Envoyer">
                    </form>
                </div>
                <div class="col col-12 col-md-2"></div>
                <div class="col col-12 col-md-4">
                    <h5>Informations</h5>
                    <ul>
                        <li><a href="">Plan du site</a></li>
                        <li><a href="">Mentions légales</a></li>
                        <li><a href="">Conditions generales vente</a></li>
                        <li><a href="">Credits</a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col col-12">
                    <small id="copyright" class="form-text text-muted">© Clément Champeau 2020</small>
                </div>
            </div>
        </section>
    </footer>
{% endblock %}