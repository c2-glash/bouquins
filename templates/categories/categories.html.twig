{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}
{% set pageClass = 'Categories' %}
{% set headerh1 = 'Les catégories' %}
{% set headerh5 = 'Cette page liste toutes les catégories des livres listés sur Bouquins.' %}
{% set headerp = 'La catégorie que vous recherchez n\'est pas encore listée? Ajoutez-la ici : ' %}
{% set headerbtntext = 'Ajouter une catégorie' %}

{% block body %}

{% include './layout/header.html.twig' %}
    <main>
        <section class="container">
            <h2>Tous les catégories : </h2>
        </section>
        <section>
            <div class="containerParallax">
                <div id="categoriesBg" class="parallaxElement parallaxBack">
                </div>
                <div class="parallaxElement parallaxBase">
                    <div class="container">
                        {% for categorie in liste_categories %}
                            <div class="media">
                                <div class="media-body">
                                    <h5 class="mt-0">{{categorie.nom}}</h5> 
                                    <p>{{categorie.description}}</p>
                                    <a class="btn btn-primary" href="categorie/{{categorie.id}}" role="button">Détails de la catégorie</a>
                                </div>
                            </div>
                        {% endfor %}
                        
                        <div class="paginationElementLoader"><button class="btn btn-primary">Charger plus de catégories</button></div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% include './layout/footer.html.twig' %}
{% endblock %}