        <section class="container">
            <h2>Tous les livres de type {{categorie.nom}} :</h2>
        </section>
        <section>
            <div class="containerParallax">
                <div id="categoriesBg" class="parallaxElement parallaxBack">
                </div>
                <div class="parallaxElement parallaxBase">
                    <div class="container">
                        <div class="card-deck">
                            {% for livre in categorie.livres %}
                                {% include "layout/cardLivre.html.twig" %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% include './layout/footer.html.twig' %}
